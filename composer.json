{
    "name": "shevaua/db-mysql-migrations",
    "description": "DB migrations for mysql",
    "authors": [
        {
            "name": "Igor Sheviakov",
            "email": "sheva@shevaua.info"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mysqli": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Shevaua\\DB\\Mysql\\Migrations\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml",
        "sniff": "phpcs --standard=ruleset.xml src/"
    }
}
